<body>
  <h1>Open StorkNeeds</h1>
  <p>If the app is installed, it should open automatically. Otherwise, you can download it.</p>

  <button id="openApp">Open App</button>
  <a href="https://example.com/path-to-your-apk.apk" download>
    <button>Download APK</button>
  </a>

  <script>
    const params = new URLSearchParams(window.location.search);
    const uid = params.get('uid') || '';

    const deepLink = `storkneeds://signup?uid=${uid}`;
    const openAppBtn = document.getElementById('openApp');

    openAppBtn.onclick = () => {
      // Try to open the app
      window.location = deepLink;

      // Fallback: after 2 seconds, the APK button is enough
      setTimeout(() => {
        alert("If the app didn't open, use the 'Download APK' button below.");
      }, 2000);
    };

    // Optional: automatically try to open the app on page load
    setTimeout(() => {
      window.location = deepLink;
    }, 500);
  </script>
</body>
